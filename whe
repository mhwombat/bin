#!/usr/bin/env sh
#: A quick script to load all of the Haskell source files
#: and configuration files in the current project
#: into emacs.

dir=`pwd | sed 's@.*/@@'`
files=`ls default.nix *.cabal CHANGELOG.md`

files="${files} `find -name dist-newstyle -prune -o -name '*.hs' -or -name '*.lhs' | sort`"

#gedit ${files} &
#cream ${files} &
#gvim ${files} &
emacs --title "${dir} : emacs" ${files} &

